<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/form.css" crossorigin="anonymous">
</head>
<body>
<%- include('../partials/navbar') %>

<div id="filter"></div>

<div class="container">
    <h1 class="text-center mt-5">Register</h1>
    <div class="row">
        <div style="width:30%; margin:30px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class='form-control shadow-none itemBox' type="text" name="username" placeholder="Username" required autocomplete="off">
                </div>
                <div class="form-group">
                    <input class='form-control shadow-none itemBox' type="password" name="password" placeholder="Password" required autocomplete="off">
                </div>
                <div class="form-group">
                    <button class='btn btn-primary bt-md btn-block'>Register</button>
                </div>
            </form>
            <a href="/" class="subButton">Back</a>
            <a href="/login" class="subButton float-right">Login</a>
        </div>
    </div>
</div>
    
<%- include('../partials/footer') %> 